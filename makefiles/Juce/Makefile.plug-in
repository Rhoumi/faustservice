################################################################################
#
#			FaustWeb Makefile for Juce
#
################################################################################

faustfile	?= $(wildcard *.dsp)

binary.zip : $(faustfile)
	faust2juce -midi $(faustfile)
	zip -r binary.zip $(faustfile:.dsp=)

src.cpp : $(faustfile)
	faust -i -a juce.cpp $(faustfile) -o src.cpp
